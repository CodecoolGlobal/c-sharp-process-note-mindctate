<Window x:Class="process_note.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:process_note"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Height="24">
                <MenuItem Header="_File">
                    <MenuItem x:Name="AlwaysOnTop" Header="_Always on top" IsCheckable="True" IsChecked="False" Click="handleAlwaysOnTop" />
                    <Separator />
                    <MenuItem Header="_Exit" />
                </MenuItem>
            </Menu>
            <TextBox AcceptsReturn="True" />
        </DockPanel>
        <ListView Name="ProcessInfo" Margin="0,22,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Process ID" Width="100" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="Process Name" Width="100" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="CPU" Width="60" DisplayMemberBinding="{Binding CpuUsage}"/>
                    <GridViewColumn Header="Memory" Width="100" DisplayMemberBinding="{Binding MemoryUsage}"/>
                    <GridViewColumn Header="Running time" Width="100" DisplayMemberBinding="{Binding RunningTime}"/>
                    <GridViewColumn Header="Start time" Width="150" DisplayMemberBinding="{Binding StartTime}"/>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button 
                                    Content="Show Thread"
                                    Click="Button_Click"
                                    Tag="{Binding Id}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="MouseDown" Handler="ListViewItem_MouseSingleClick" />
                    <EventSetter Event="MouseDoubleClick" Handler="ListViewItem_MouseDoubleClick" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Window>
