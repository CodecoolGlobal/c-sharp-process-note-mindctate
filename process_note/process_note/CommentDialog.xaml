<Window x:Class="process_note.CommentDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:process_note"
      mc:Ignorable="d"
      Title="Add Comment" 
      Height="200" 
      Width="450">

    <Grid>
        <TextBlock Margin="41,32,41,110" Text="Enter Comment:" FontWeight="Bold" FontFamily="Cambria" />
        <TextBox MinWidth="300" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="InputTextBox" Width="360" Height="20"/>

        <WrapPanel HorizontalAlignment="Right" Margin="0,137,0,0" Width="154">
            <Button IsDefault="True" Name="Save_Button" Click="Save_Button_Click" MinWidth="60" Margin="0,0,10,0">_Save</Button>
            <Button IsCancel="True" Name="Cancel_Button" Click="Cancel_Button_Click" MinWidth="60">_Cancel</Button>
        </WrapPanel>
    </Grid>
</Window>
